{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/controller/*Controller.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"],
      "~/*": ["src/assets/*"]
    }
  },
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "public"
  }
}
